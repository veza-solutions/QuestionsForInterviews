<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - C# Въпроси за интервю</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="topnav">
            <a class="active" href="/">Vangel Iliev Questions</a>                    
            <div class="topnav-right">
                @if (this.User.Identity.IsAuthenticated)
                {
                    <a asp-controller="LogIn" asp-action="LogOut">Изход</a>
                }
                else
                {
                    <a asp-controller="LogIn" asp-action="LogIn">Вход</a>
                    <a asp-controller="LogIn" asp-action="Register">Регистрирай се</a>
                }
            </div>
            <div>
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Позиция
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="#">Trainee</a>
                    <a class="dropdown-item" href="#">Junior</a>
                    <a class="dropdown-item" href="#">Mid level</a>
                    <a class="dropdown-item" href="#">Senior</a>
                </div>
                <a href="#">Блог</a>
                <a href="#">Контакти</a>
                <a href="#">Полезни материали</a>
                <a href="#">Предложи въпрос</a>
                @if (this.User.IsInRole("Admin"))
                {
                    <a href="#">Добави въпрос</a>
                }

            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
